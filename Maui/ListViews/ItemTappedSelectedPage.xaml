<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MetanitLessons.Maui.ListViews.ItemTappedSelectedPage"
             Title="ItemTappedSelectedPage">
    
    <VerticalStackLayout Padding="8">
        <Label x:Name="selectedLabel" />
        <Label x:Name="tappedLabel" />

        <ListView 
            x:Name="usersListView" 
            ItemSelected="UsersListItemSelected" 
            ItemTapped="UsersListItemTapped"/>
    </VerticalStackLayout>
</ContentPage>
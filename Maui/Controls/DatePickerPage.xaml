<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MetanitLessons.DatePickerPage"
             Title="DatePickerPage">
    <VerticalStackLayout Padding="20">
        <Label 
            x:Name="labelXaml"
            Text="Выберите дату" />
        <DatePicker Format="d" DateSelected="DateSelectedXaml">
            <DatePicker.MinimumDate>7/10/2022</DatePicker.MinimumDate>
            <DatePicker.MaximumDate>7/20/2025</DatePicker.MaximumDate>
        </DatePicker>
    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MetanitLessons.SliderPage"
             Title="SliderPage">
    <VerticalStackLayout>
        <Label x:Name="label" FontSize="18" Margin="8" />
        <Slider Minimum="0" Maximum="50" Value="30" ValueChanged="OnSliderValueChangedXaml"
                MinimumTrackColor="DeepPink"  MaximumTrackColor="LightPink" ThumbColor="DeepPink" />
    </VerticalStackLayout>
</ContentPage>
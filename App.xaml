<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MetanitLessons"
             x:Class="MetanitLessons.App">
    
    <!--Ресурсы уровня приложения-->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            
                <!--Добавим свои ресурсы-->
                <ResourceDictionary>
                    <Color x:Key="appTextColor">#C0392B</Color>
                    <Color x:Key="appBackColor">#FAB1A0</Color>
                    <x:Double x:Key="appMargin">10</x:Double>
                </ResourceDictionary>
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
